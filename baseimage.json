{
  "variables": {
    "timezone": "Asia/Tokyo",
    "image_from": "ubuntu:focal",
    "unbound_root": "/chroot",
    "unbound_user": "unbound",
    "unbound_version": "1.13.2"
  },
  "builders":[
    {
      "type": "docker",
      "image": "{{user `image_from`}}",
      "run_command": ["-dit", "{{.Image}}", "/bin/bash"],
      "commit": true,
      "changes": [
        "ENV DEBIAN_FRONTEND noninteractive"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "file",
      "source": "files/etc/apt/sources.list",
      "destination": "/etc/apt/sources.list"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y upgrade",
        "apt-get -y install --no-install-recommends ansible python3 python3-apt",
        "mkdir -p /tmp/ansible-local"
      ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/ansible-local"
    },
    {
      "type": "ansible-local",
      "playbook_file": "baseimage.yml",
      "staging_directory": "/tmp/ansible-local",
      "extra_arguments": [
        "-e timezone={{user `timezone`}}",
        "-e unbound_root={{user `unbound_root`}}",
        "-e unbound_user={{user `unbound_user`}}",
        "-e unbound_version={{user `unbound_version`}}",
        "-e ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "autechgemz/unbound-baseimage",
      "tags": "latest"
    }
  ]
}
