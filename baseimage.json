{
  "variables": {
    "timezone": "Asia/Tokyo",
    "image_from": "alpine:latest",
    "unbound_root": "/chroot",
    "unbound_user": "unbound",
    "unbound_version": "1.13.2"
  },
  "builders":[
    {
      "type": "docker",
      "image": "{{user `image_from`}}",
      "run_command": ["-dit", "{{.Image}}", "/bin/ash"],
      "commit": true
    }
  ],
  "provisioners":[
    {
      "type": "shell",
      "inline": [
        "apk update",
        "apk upgrade --update --available",
        "apk add --no-cache ansible python3",
        "mkdir -p /tmp/ansible-local"
      ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/ansible-local"
    },
    {
      "type": "ansible-local",
      "playbook_file": "baseimage.yml",
      "staging_directory": "/tmp/ansible-local",
      "extra_arguments": [
        "-e timezone={{user `timezone`}}",
        "-e unbound_root={{user `unbound_root`}}",
        "-e unbound_user={{user `unbound_user`}}",
        "-e unbound_version={{user `unbound_version`}}",
        "-e ansible_python_interpreter=/usr/bin/python3"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "autechgemz/unbound-baseimage",
      "tags": "latest"
    }
  ]
}
