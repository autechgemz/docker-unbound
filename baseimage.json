{
  "variables": {
    "timezone": "Asia/Tokyo",
    "image_from": "ubuntu:focal",
    "unbound_root": "/chroot",
    "unbound_user": "unbound",
    "unbound_version": "1.13.2"
  },
  "builders":[
    {
      "type": "docker",
      "image": "{{user `image_from`}}",
      "run_command": ["-dit", "{{.Image}}", "/bin/bash"],
      "commit": true,
      "changes": [
        "ENV DEBIAN_FRONTEND noninteractive"
      ]
    }
  ],
  "provisioners":[
    {
      "type": "file",
      "source": "files/etc/apt/sources.list",
      "destination": "/etc/apt/sources.list"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get -y update",
        "apt-get -y upgrade",
        "apt-get -y install --no-install-recommends python3 python3-apt"
      ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "baseimage.yml",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='-o IdentitiesOnly=yes -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o AddKeysToAgent=no'"
      ],
      "extra_arguments": [
        "-e timezone={{user `timezone`}}",
        "-e unbound_root={{user `unbound_root`}}",
        "-e unbound_user={{user `unbound_user`}}",
        "-e unbound_version={{user `unbound_version`}}"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "autechgemz/unbound-baseimage",
      "tags": "latest"
    }
  ]
}
